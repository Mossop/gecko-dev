dist_dest   = $(DIST)/PWA.app

tools repackage:: $(DIST)/bin/pwa
	rm -rf $(dist_dest)
	$(MKDIR) -p '$(dist_dest)/Contents/MacOS'
	rsync -aL $(DIST)/bin/pwa '$(dist_dest)/Contents/MacOS'
	rsync -aL $(DIST)/bin/libmozglue.dylib '$(dist_dest)/Contents/MacOS'
	rsync -aL $(srcdir)/Info.plist '$(dist_dest)/Contents'
	printf APPLMOZB > '$(dist_dest)/Contents/PkgInfo'
